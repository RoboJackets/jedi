{
    "extends": [
        "config:base",
        ":disableMajorUpdates"
    ],
    "prConcurrentLimit": 1,
    "prHourlyLimit": 0,
    "rebaseStalePrs": true,
    "automerge": true,
    "platformAutomerge": true,
    "php": {
        "rangeStrategy": "pin",
        "lockFileMaintenance": {
            "enabled": true,
            "schedule": ["before 8am every weekday"]
        },
        "packageRules": [
            {
                "matchPackageNames": ["php"],
                "rangeStrategy": "replace"
            }
        ]
    },
    "js": {
        "enabled": false
    },
    "timezone": "America/New_York",
    "schedule": ["before 4pm every weekday"]
}
