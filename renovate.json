{
    "extends": [
        "config:base",
        ":disableMajorUpdates"
    ],
    "prConcurrentLimit": 1,
    "prHourlyLimit": 0,
    "rebaseStalePrs": true,
    "automerge": true,
    "platformAutomerge": true,
    "php": {
        "rangeStrategy": "pin",
        "lockFileMaintenance": {
            "enabled": true,
            "schedule": ["before 4pm on Wednesday except before 9am on Wednesday"],
            "prPriority": -2
        },
        "packageRules": [
            {
                "matchPackageNames": ["php"],
                "rangeStrategy": "replace"
            },
            {
              "matchDepTypes": ["require-dev"],
              "prPriority": -1
            },
            {
              "matchPackagePatterns": ["^laravel/"],
              "prPriority": 1
            },
            {
              "matchPackageNames": ["laravel/framework"],
              "prPriority": 2
            }
        ]
    },
    "js": {
        "enabled": false
    },
    "docker": {
        "enabled": false
    },
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 4pm on Wednesday except before 9am on Wednesday"]
    },
    "timezone": "America/New_York",
    "schedule": ["before 4pm on Wednesday except before 9am on Wednesday"]
}
